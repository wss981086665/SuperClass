.work-img{
  width: 94%;
  height: 400rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 0 20rpx 0 rgb(177, 177, 177);
}
.no-sum{
  width: 40%;
  height: 320rpx;
  padding-top: 80rpx;
  margin: 0 auto;
  overflow: hidden;
}
.no-sum-img{
  width: 70%;
  height: 60%;
  margin:  0 auto;
}
.no-sum-text{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 10rpx;
  color: rgb(170, 170, 170);
}
.s-image{
  width: 100%;
  height: 100%;
}
.work-tip{
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  line-height: 80rpx;
  font-size: 25px;
  color: rgb(48, 48, 48);
  font-weight: 650;
}
.work-con{
  width: 90%;
  height: 300rpx;
  margin: 0 auto;
  margin-top: 15rpx;
  color: rgb(48, 48, 48);
  font-size: 15px;
}
.pclass{
  color: rgb(170, 170, 170);
}
.picker{
  width: 94%;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 700;
  margin: 0 auto;
  background-color: white;
  margin-left: 1%;
  padding-left: 2%;
  color: rgb(54, 54, 54);
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.144);
}
.work-submit{
  width: 90%;
  height: 80rpx;
  color: white;
  background-color: #6A5ACD;
  margin: 0 auto;
  margin-top: 20rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 5rpx;
  box-shadow: 0 0 15rpx 0 rgb(127, 120, 179);
  font-size: 18px;
}