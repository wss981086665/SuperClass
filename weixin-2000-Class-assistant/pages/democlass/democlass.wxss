.userinfo {
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 3;
  padding-top: 15vh;
  background-color: #6A5ACD;
}
.tip-con{
  width: 74%;
  height: 55%;
  padding-top: 3%;
  position: fixed;
  top: 15%;
  left: 13%;
  overflow: hidden;
  border-radius: 30rpx;
  background-color: #6A5ACD;
  box-shadow: 0 0 5px 0 white;
}
.tip-text{
  width: 100%;
  height: 70rpx;
  color: white;
  font-size: 16px;
  font-weight: 650;
  line-height: 70rpx;
  overflow: hidden;
  text-align: center;
}
.tavatarUrl{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 50%;
  overflow: hidden;
}
.ava-img{
  width: 100%;
  height: 100%;
}
.teacher{
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 15rpx;
  color: white;
}
.login{
  width: 110%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 0;
  padding: 0;
  background-color: #6A5ACD;
  color: white;
  border-radius: 0;
  position: absolute;
  bottom: -3rpx;
  left: -5%;
}