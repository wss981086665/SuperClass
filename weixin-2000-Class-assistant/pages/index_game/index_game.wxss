/* pages/index_game/index_game.wxss */
page {
  background-color: rgba(220, 220, 220, 0.3);
}
.tool-con {
  width: 96%;
  height: 100%;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  padding-bottom: -2rpx;
}
.tool-tip {
  width: 80%;
  height: 80rpx;
  color: rgb(85, 85, 85);
  font-weight: 700;
  padding-left: 15rpx;
  line-height: 80rpx;
}
.tool-list {
  width: 100%;
  height: 100%;
  padding-left: 2rpx;
  border-top:  1rpx solid rgba(240, 240, 240, 0.8);
  overflow: hidden;
}
.tool-bean {
  width: 33%;
  height: 230rpx;
  float: left;
  border-right: 1rpx solid rgba(240, 240, 240, 0.8);
  border-bottom: 1rpx solid rgb(240, 240, 240, 0.8);
}
.bean-img{
  width: 36%;
  height: 36%;
  margin-left: 32%;
  margin-top: 50rpx;
}
.bean-text{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 15px;
  color: #585858;
  text-align: center;
}