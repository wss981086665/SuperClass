.container{
  width: 92%;
  height: 600rpx;
  padding-left:2%;
  margin: 0 auto;
  margin-top: 20rpx;
}
.tip{
  font-size: 35px;
  font-weight: 600;
  color: rgb(44, 44, 44);
  margin-bottom: 70rpx;
}
.input{
  width: 97%;
  height: 100rpx;
  margin-top: 5rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid rgb(224, 224, 224);
}
.creat-class{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  background-color: #6A5ACD;
  box-shadow: 0 0 25rpx 0 #6A5ACD;
  color: white;
  position: fixed;
  left: 25%;
  bottom: 70rpx;
}